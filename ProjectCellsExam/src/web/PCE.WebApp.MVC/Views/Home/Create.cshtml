@model PCE.WebApp.MVC.Models.CellViewModel
@{
    ViewData["Title"] = "Cadastro de Células";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">

            @*<vc:Summary></vc:Summary>*@
            <div class="row">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="IdOperation" class="control-label"></label>
                    <select asp-for="IdOperation" class="form-control" asp-items="@(new SelectList(Model.Operations, "IdOperation", "Description"))">
                        <option></option>
                    </select>

                    <span asp-validation-for="IdOperation" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CodOperation" class="control-label"></label>
                    <input asp-for="CodOperation" class="form-control" />
                    <span asp-validation-for="CodOperation" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="IdStatus" class="control-label"></label>
                    <select asp-for="IdStatus" class="form-control" asp-items="@(new SelectList(Model.listStatus, "IdStatus", "Description"))">
                        <option></option>
                    </select>

                    <span asp-validation-for="IdStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
